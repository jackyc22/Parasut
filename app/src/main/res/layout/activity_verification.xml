<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_signup"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Verification">
    <ImageButton
        android:layout_marginTop="5dp"
        android:onClick="back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/transparent"
        android:src="@drawable/icon_back_white"/>
    <ImageView
        android:layout_width="138dp"
        android:layout_height="51dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="75dp"
        android:src="@drawable/nama_produk" />
    <LinearLayout
        android:layout_marginTop="45dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Verification"
            android:textColor="@color/primary"
            android:textSize="25sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Enter the verification code we just sent you on your email address."
            android:textColor="@color/primary"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:text="Code"
            android:textColor="@color/black" />
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/editCode1"
                android:layout_width="80dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:gravity="center"
                android:textSize="22sp"

                android:textStyle="bold"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/editCode2"
                android:layout_width="80dp"
                android:layout_marginRight="10dp"
                android:ems="10"
                android:gravity="center"
                android:textSize="22sp"
                android:textStyle="bold"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/editCode3"
                android:layout_width="80dp"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textSize="22sp"
                android:ems="10"
                android:textStyle="bold"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/editCode4"
                android:layout_width="80dp"
                android:gravity="center"
                android:textSize="22sp"
                android:ems="10"
                android:textStyle="bold"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"

            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary"
                android:text="if you didnâ€™t receive a code!"/>
            <TextView
                android:id="@+id/textResend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="@string/resend"
                android:textColor="@color/red"/>


        </LinearLayout>
        <Button
            android:id="@+id/btnVerify"
            android:onClick="Verify"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Verify"
            android:textAllCaps="false"
            android:background="@drawable/btn_custom"/>

    </LinearLayout>

</LinearLayout>